<h2>Sign Up Confirmation</h2>
<h3>Are you sure these values are correct?</h3>

<div class='row'>
  <div class="col-md-4">
    Email:
    <%= params[:user][:email]%>
  </div>
</div>
<div class='row'>
  <div class="col-md-4">
    Name:
    <%= params[:user][:name]%>
  </div>
</div>

<div class='row top10'>
  <div class="col-md-2">
    <%= button_to "Yes", {controller: "users", action: "create",  params: params.to_unsafe_h}, class: 'btn btn-success' %>
  </div>
  <div class="col-md-2">
    <%= button_to "No", {controller: "users", action: "new"},  method: :get, class: 'btn btn-danger' %>
  </div>
</div>
